<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradient"
    tools:context=".MovieProfile">

    <TextView
        android:id="@+id/movieProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="51dp"
        android:background="#FF5722"
        android:text="Test"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/movieProfilePoster"
        android:layout_width="239dp"
        android:layout_height="258dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/movieProfileRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="262dp"
        android:layout_marginTop="152dp"
        android:text="Release Date:"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/movieProfileReleaseField"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="277dp"
        android:layout_marginTop="208dp"
        android:text="date"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/movieProfileRating"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="261dp"
        android:layout_marginTop="239dp"
        android:text="Rating:"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/movieProfileRatingField"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="285dp"
        android:layout_marginTop="279dp"
        android:text="R"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/movieProfileDesc"
        android:layout_width="377dp"
        android:layout_height="314dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="406dp"
        android:text="Desc"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/movieProfileReturn"
        android:layout_width="84dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/abc_vector_test" />

    <Button
        android:id="@+id/movieProfileChatButton"
        android:layout_width="84dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#FF5722"
        android:text="Chat"
        android:textColor="#000000"/>

</RelativeLayout>